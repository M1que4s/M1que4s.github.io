  script.
    const path = window.location.pathname;

    if (path != "/") {
      let links = document.querySelector("#nav_links > ul").querySelectorAll("li");

      for (var link of links) {
        if (path == "/projects.html" && link.id == "projects_link") {
          let a = link.children[0];
          a.classList.add("active");
          a.setAttribute("aria-current", "page");
        } else if (path == "/blog.html" && link.id == "blog_link") {
          let a = link.children[0];
          a.classList.add("active");
          a.setAttribute("aria-current", "page");
        } else if (path == "/about.html" && link.id == "about_link") {
          let a = link.children[0];
          a.classList.add("active");
          a.setAttribute("aria-current", "page");
        } else if (path == "/contact.html" && link.id == "contact_link") {
          let a = link.children[0];
          a.classList.add("active");
          a.setAttribute("aria-current", "page");
        }
      }
    }