block Sidebar
  .column.is-shrink.is-desktop-up(
    style="width: 300px; position: fixed;"
  )
    .card.has-no-shadow(style="height: 100vh;")
      .card__content.grid.is-vertical
        // Profile image
        .column.is-shrink(style="margin-right: auto; margin-left: auto;")
          .image.is-square.is-rounded
            img(
              src="Static/Brand.png"
              width="100%"
              height="100%"
              style="border-radius: 50%;"
            ).has-bg-light

        // Nav links
        .column.grid.has-no-padding-top.has-no-padding-left.has-no-padding-right.is-vertical
          .column.is-full.has-text-center
            h4 Miqueas Martinez
            small: em Programmer — Designer

          .column.is-full
            ul.has-no-list-style
              // li: a(href="/") Home
              // li.has-text-muted Blog (coming soon)
              // li: a(href="/contact") Contact

      .card__footer.grid
        // Language selection
        .column.is-full
          .is-button-group
            button#en-btn.button.is-primary.is-rounded English
            button#es-btn.button.is-primary.is-rounded Español

        // Social
        .column.is-full
          ul.is-inline-list
            li: a(href="https://t.me/M1que4s").fab.fa-telegram-plane
            li: a(href="https://mas.to/@M1que4s").fab.fa-mastodon
            li: a(href="mailto:miqueas2020@yahoo.com").fas.fa-envelope

        // Copyright
        .column.is-full.has-no-padding-top
          small &copy; 2021 Miqueas Martinez